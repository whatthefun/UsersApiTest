<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/white_radius_rect" android:state_pressed="true" />
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#56666666" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:bottom="3dp" android:drawable="@drawable/white_radius_rect" android:right="3dp" />
        </layer-list>
    </item>

</selector>
